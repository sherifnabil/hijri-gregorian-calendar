{
  "name": "dual-datepicker-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:vue3 && npm run build:vue2",
    "build:core": "npm run build --workspace=@dual-datepicker/core",
    "build:vue3": "npm run build --workspace=@dual-datepicker/vue3",
    "build:vue2": "npm run build --workspace=@dual-datepicker/vue2",
    "dev:vue3": "npm run dev --workspace=vue3-example",
    "dev:vue2": "npm run dev --workspace=vue2-example",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  }
}
