{
  "name": "@dual-datepicker/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Framework-agnostic dual calendar (Hijri/Gregorian) logic",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^3.3.1",
    "hijri-date": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
