{
  "name": "@sherifnabil/hijri-gregorian-calendar-core",
  "version": "1.0.1",
  "type": "module",
  "description": "Framework-agnostic dual calendar (Hijri/Gregorian) logic",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/sherifnabil/hijri-gregorian-calendar.git",
    "directory": "packages/core"
  },
  "keywords": [
    "datepicker",
    "calendar",
    "hijri",
    "gregorian",
    "islamic-calendar",
    "date-picker"
  ],
  "author": "Sherif Nabil <sherifnabil441@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^3.3.1",
    "hijri-date": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}